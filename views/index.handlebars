<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 mx-auto" id="main-content">
        <h1>{{msg}}</h1>
        <h2>What's For Dinner!</h2>
        <h3>Survey</h3>
          {{#each questions}}

          <div id="question">{{this.food_question}}</div>
          <button type="button" class="btn btn-primary food-choice" data-id={{this.id}}>{{this.food_choices1}}</button>
          <button type="button" class="btn btn-primary food-choice" data-id={{this.id}}>{{this.food_choices2}}</button>
          <button type="button" class="btn btn-primary food-choice" data-id={{this.id}}>{{this.food_choices3}}</button>
          <button type="button" class="btn btn-primary food-choice" data-id={{this.id}}>{{this.food_choices4}}</button>

          {{/each}}

          <div>Do you feel like going out to eat or staying in and cooking?</div>

          <button type="button" id="go-out" class="btn btn-primary">Go Out</button>
          <button type="button" id="stay-in" class="btn btn-primary">Stay In</button>
        </ul>
      </div>
    </div>
    <div class="row">
      <button type="button" class="btn btn-secondary mx-auto mt-4" id="submit-button">Submit</button>
    </div>
  </div>
</div>
